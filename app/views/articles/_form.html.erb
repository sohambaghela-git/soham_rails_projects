<%= form_with model: article do |form| %>
  <div>
    <%= form.label :heading %><br>
    <%= form.text_field :heading %>
    <% article.errors.full_messages_for(:heading).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :data %><br>
    <%= form.text_area :data %><br>
    <% article.errors.full_messages_for(:data).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  <br></br>
  
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
